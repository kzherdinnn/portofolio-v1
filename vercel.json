{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/sitemap.xml",
            "destination": "/client/dist/sitemap.xml"
        },
        {
            "source": "/robots.txt",
            "destination": "/client/dist/robots.txt"
        },
        {
            "source": "/favicon.ico",
            "destination": "/client/dist/favicon.ico"
        },
        {
            "source": "/profile.png",
            "destination": "/client/dist/profile.png"
        },
        {
            "source": "/cover.jpg",
            "destination": "/client/dist/cover.jpg"
        },
        {
            "source": "/cv_herdin.pdf",
            "destination": "/client/dist/cv_herdin.pdf"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/client/dist/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/client/dist/index.html"
        }
    ]
}